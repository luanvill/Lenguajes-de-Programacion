<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/imagenPerroPerdidoListView"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:contentDescription="@string/descripcionImagenPerroPerdido"
        app:layout_constraintBottom_toBottomOf="@+id/sexoPerroPerdidoListView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sexoPerroPerdidoListView"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/razaPerroPerdidoListView"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/sexoPerroPerdidoListView"
        app:layout_constraintStart_toEndOf="@+id/imagenPerroPerdidoListView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/sexoPerroPerdidoListView"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/edadPerroPerdidoListView"
        app:layout_constraintStart_toEndOf="@+id/imagenPerroPerdidoListView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/edadPerroPerdidoListView"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginBottom="25dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imagenPerroPerdidoListView" />

    <TextView
        android:id="@+id/descripcionPerroPerdidoListView"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imagenPerroPerdidoListView"
        app:layout_constraintTop_toBottomOf="@+id/edadPerroPerdidoListView" />
</androidx.constraintlayout.widget.ConstraintLayout>