<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/imagenPerroAdoptarListView"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:contentDescription="@string/descripcionImagenPerroAdoptar"
        app:layout_constraintBottom_toBottomOf="@+id/sexoPerroAdoptarListView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sexoPerroAdoptarListView"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/razaPerroAdoptarListView"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/sexoPerroAdoptarListView"
        app:layout_constraintStart_toEndOf="@+id/imagenPerroAdoptarListView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/sexoPerroAdoptarListView"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/edadPerroAdoptarListView"
        app:layout_constraintStart_toEndOf="@+id/imagenPerroAdoptarListView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/edadPerroAdoptarListView"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginBottom="25dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imagenPerroAdoptarListView" />

    <TextView
        android:id="@+id/descripcionPerroAdoptarListView"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imagenPerroAdoptarListView"
        app:layout_constraintTop_toBottomOf="@+id/edadPerroAdoptarListView" />
</androidx.constraintlayout.widget.ConstraintLayout>